{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "SPIP",
    "scopeName": "text.html.spip",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#translations"
        },
        {
            "include": "#inclusions"
        },
        {
            "include": "#boucles"
        },
        {
            "include": "#conditions"
        },
        {
            "include": "#balises-optionnelles"
        },
        {
            "include": "#balises"
        },
        {
            "include": "#filtres"
        },
        {
            "include": "#criteres"
        },
        {
            "include": "text.html.basic"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.spip",
                    "begin": "\\[\\(#REM\\)",
                    "end": "\\]"
                }
            ]
        },
        "translations": {
            "patterns": [
                {
                    "name": "string.other.translation.spip",
                    "match": "<:[a-zA-Z0-9_]+:[a-zA-Z0-9_]*>",
                    "captures": {
                        "0": {
                            "name": "constant.language.translation.spip"
                        }
                    }
                }
            ]
        },
        "inclusions": {
            "patterns": [
                {
                    "name": "meta.tag.spip.inclusion",
                    "begin": "(<)(INCLURE)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.spip"
                        },
                        "2": {
                            "name": "entity.name.tag.spip"
                        }
                    },
                    "end": "(>)",
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.end.spip"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#criteres"
                        },
                        {
                            "include": "#balises"
                        }
                    ]
                }
            ]
        },
        "balises-optionnelles": {
            "patterns": [
                {
                    "name": "meta.balise-optionnelle.spip",
                    "begin": "\\[",
                    "end": "\\]",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.balise-optionnelle.begin.spip"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.balise-optionnelle.end.spip"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#translations"
                        },
                        {
                            "include": "#inclusions"
                        },
                        {
                            "include": "#boucles"
                        },
                        {
                            "include": "#balises"
                        },
                        {
                            "include": "#filtres"
                        },
                        {
                            "include": "#conditions"
                        },
                        {
                            "include": "text.html.basic"
                        }
                    ]
                }
            ]
        },
        "balises": {
            "patterns": [
                {
                    "name": "variable.other.spip.special",
                    "match": "#(ENV|GET|SET|INCLURE|TOTAL_BOUCLE|GRAND_TOTAL|PAGINATION)(\\{[^}]*\\})?"
                },
                {
                    "name": "keyword.other.spip.edit",
                    "match": "#EDIT\\{[a-zA-Z0-9_]+\\}",
                    "captures": {
                        "0": {
                            "name": "support.function.edit.spip"
                        }
                    }
                },
                {
                    "name": "variable.other.spip.modele",
                    "match": "#MODELE\\{[^}]+\\}"
                },
                {
                    "name": "entity.name.tag.spip",
                    "match": "#[A-Z][A-Z0-9_]*(\\{[^}]*\\})?"
                }
            ]
        },
        "boucles": {
            "patterns": [
                {
                    "name": "meta.tag.spip.boucle",
                    "begin": "(<)(BOUCLE)(_[a-zA-Z0-9_]+|[0-9]+)?",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.spip"
                        },
                        "2": {
                            "name": "entity.name.tag.spip"
                        },
                        "3": {
                            "name": "entity.other.attribute-name.spip"
                        }
                    },
                    "end": "(>)",
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.end.spip"
                        }
                    },
                    "patterns": [
                        {
                            "name": "entity.name.type.spip",
                            "match": "\\(([A-Z_]+)\\)",
                            "captures": {
                                "1": {
                                    "name": "support.type.table.spip"
                                }
                            }
                        },
                        {
                            "include": "#criteres"
                        }
                    ]
                },
                {
                    "name": "meta.tag.spip.boucle-close",
                    "begin": "(</)(BOUCLE)(_[a-zA-Z0-9_]+|[0-9]+)?",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.begin.spip"
                        },
                        "2": {
                            "name": "entity.name.tag.spip"
                        },
                        "3": {
                            "name": "entity.other.attribute-name.spip"
                        }
                    },
                    "end": "(>)",
                    "endCaptures": {
                        "1": {
                            "name": "punctuation.definition.tag.end.spip"
                        }
                    }
                },
                {
                    "name": "meta.tag.spip.alternative.before",
                    "match": "<(B_[a-zA-Z0-9_]+)>",
                    "captures": {
                        "0": {
                            "name": "entity.name.tag.spip"
                        },
                        "1": {
                            "name": "entity.other.attribute-name.spip"
                        }
                    }
                },
                {
                    "name": "meta.tag.spip.alternative.after",
                    "match": "</(B_[a-zA-Z0-9_]+)>",
                    "captures": {
                        "0": {
                            "name": "entity.name.tag.spip"
                        },
                        "1": {
                            "name": "entity.other.attribute-name.spip"
                        }
                    }
                },
                {
                    "name": "meta.tag.spip.alternative.empty",
                    "match": "<//(B_[a-zA-Z0-9_]+)>",
                    "captures": {
                        "0": {
                            "name": "entity.name.tag.spip"
                        },
                        "1": {
                            "name": "entity.other.attribute-name.spip"
                        }
                    }
                },
                {
                    "name": "meta.tag.spip.alternative.avant-apres",
                    "match": "<(AVANT|APRES)>",
                    "captures": {
                        "0": {
                            "name": "entity.name.tag.spip"
                        }
                    }
                }
            ]
        },
        "criteres": {
            "patterns": [
                {
                    "name": "meta.brace.curly.spip",
                    "begin": "\\{",
                    "end": "\\}",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.section.embedded.begin.spip"
                        }
                    },
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.section.embedded.end.spip"
                        }
                    },
                    "patterns": [
                        {
                            "name": "keyword.operator.negation.spip",
                            "match": "!"
                        },
                        {
                            "name": "keyword.operator.optional.spip",
                            "match": "\\?"
                        },
                        {
                            "name": "keyword.operator.comparison.spip",
                            "match": "(!=|!==|==|>=|<=|>|<|=|\\sIN\\s|!IN\\s|\\sLIKE\\s)"
                        },
                        {
                            "name": "keyword.operator.tri.spip",
                            "match": "\\b(par|inverse|num|multi|par_ordre_liste)\\b"
                        },
                        {
                            "name": "keyword.operator.selection.spip",
                            "match": "\\b(branche|doublons|unique|exclus|logo)\\b"
                        },
                        {
                            "name": "keyword.operator.date.spip",
                            "match": "\\b(age|age_redac|age_relatif|date|mois|mois_redac|annee|annee_redac)\\b"
                        },
                        {
                            "name": "keyword.operator.standard.spip",
                            "match": "\\b(id_article|id_rubrique|id_secteur|id_mot|id|pagination|lang|titre|hasard)\\b"
                        },
                        {
                            "name": "constant.numeric.range.spip",
                            "match": "\\b(n|debut_[a-zA-Z0-9_]+|\\d+)\\s*[-,/]\\s*(n|\\d+)\\b"
                        },
                        {
                            "name": "constant.numeric.spip",
                            "match": "\\b\\d+\\b"
                        },
                        {
                            "include": "#balises"
                        },
                        {
                            "include": "#filtres"
                        },
                        {
                            "name": "string.quoted.double.spip",
                            "begin": "\"",
                            "end": "\"",
                            "patterns": [
                                {
                                    "name": "constant.character.escape.spip",
                                    "match": "\\\\."
                                }
                            ]
                        },
                        {
                            "name": "string.quoted.single.spip",
                            "begin": "'",
                            "end": "'",
                            "patterns": [
                                {
                                    "name": "constant.character.escape.spip",
                                    "match": "\\\\."
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "filtres": {
            "patterns": [
                {
                    "name": "keyword.operator.filter.test.spip",
                    "match": "\\|(sinon|\\?|==|!=|!==|>=|<=|>|<)"
                },
                {
                    "name": "keyword.operator.filter.spip",
                    "match": "\\|[a-zA-Z_][a-zA-Z0-9_]*",
                    "captures": {
                        "0": {
                            "name": "support.function.filter.spip"
                        }
                    }
                }
            ]
        },
        "conditions": {
            "patterns": [
                {
                    "comment": "Conditional block with optional content: [(#BALISE|filter|oui) content ]",
                    "name": "meta.embedded.block.spip.conditional",
                    "begin": "\\[\\((#[A-Z][A-Z0-9_]*)",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.tag.begin.spip"
                        },
                        "1": {
                            "name": "entity.name.tag.spip"
                        }
                    },
                    "end": "\\]",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.tag.end.spip"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#inclusions"
                        },
                        {
                            "include": "#boucles"
                        },
                        {
                            "include": "#filtres"
                        },
                        {
                            "include": "#criteres"
                        },
                        {
                            "include": "#balises"
                        },
                        {
                            "include": "#translations"
                        },
                        {
                            "name": "keyword.control.conditional.test.spip",
                            "match": "\\b(oui|non)\\b"
                        },
                        {
                            "name": "punctuation.section.parens.spip",
                            "match": "\\)"
                        },
                        {
                            "name": "string.quoted.double.spip",
                            "begin": "\"",
                            "end": "\""
                        },
                        {
                            "name": "string.quoted.single.spip",
                            "begin": "'",
                            "end": "'"
                        },
                        {
                            "include": "text.html.basic"
                        }
                    ]
                }
            ]
        }
    }
}